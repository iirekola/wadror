<h2>Rating Statistics</h2>

<div class="row">
  <div class="col-md-3">
    Best beers
    <div class="row">
      <%= render 'list', items: @beers %>
    </div>
  </div>
  <div class="col-md-3">
    Best breweries
    <div class="row">
      <%= render 'list', items: @breweries %>
    </div>
  </div>
  <div class="col-md-3">
    Best Styles
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    Most active users
    <div class="row">
      <div class="col-md-8 col-md-6>

      </div>
    </div>
  </div>
</div>

<p>
  Recent ratings
  <ul>
    <% @ratings.recent.each do |rating| %>
     <li> <%= rating %> <%= link_to rating.user.username, rating.user %> </li>
    <% end %>
  </ul>
</p>